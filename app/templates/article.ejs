<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%- article.title %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link
      rel="shortcut icon"
      href="../assets/favicon.ico"
      type="image/x-icon"
    />
    <link rel="preload" href="../styles/article.css" as="style" />
    <link rel="stylesheet" href="../styles/article.css" />
  </head>
  <body>
    <header id="top-container" role="navigation">
      <%- include(process.cwd() + '/app/templates/navigation'); %>
    </header>
    <main id="main-container">
      <article id="article-container">
        <h1 id="article-title"><%- article.title %></h1>
        <% if (article.subtitle) { %>
        <h2 id="article-subtitle"><%- article.subtitle %></h2>
        <% } %>
        <time id="article-date"> <%- article.date %> </time>
        <section id="article-content-container"><%- article.content %></section>
        <section id="article-navigation">
          <% if (nextArticle) { %>
          <div class="article-navigation-item article-navigation-next">
            <a href="/pages/article/<%- nextArticle.id %>.html">
              <div class="article-navigation-arrow article-navigation-next">
                ï¼œ
              </div>
              <div class="article-navigation-content article-navigation-next">
                <p class="article-navigation-title"><%- nextArticle.title %></p>
                <p class="article-navigation-subtitle">
                  <%- nextArticle.subtitle %>
                </p>
              </div>
            </a>
          </div>
          <% } %> <% if (prevArticle) { %>
          <div class="article-navigation-item article-navigation-prev">
            <a href="/pages/article/<%- prevArticle.id %>.html">
              <div class="article-navigation-arrow article-navigation-prev">
                ï¼ž
              </div>
              <div class="article-navigation-content article-navigation-prev">
                <p class="article-navigation-title"><%- prevArticle.title %></p>
                <p class="article-navigation-subtitle">
                  <%- prevArticle.subtitle %>
                </p>
              </div>
            </a>
          </div>
          <% } %>
        </section>
        <section id="article-social-container">
          <div id="fb-root"></div>
          <div
            id="fb-like"
            class="fb-like"
            data-href="https://tianyimasf.github.io/article/<%- article.id %>.html"
            data-layout="button_count"
            data-action="like"
            data-size="small"
            data-show-faces="true"
            data-share="true"
          ></div>
          <a
            href="https://twitter.com/share"
            class="twitter-share-button"
            data-show-count="true"
          ></a>
        </section>
        <section id="article-comments">
          <script
            async
            src="https://utteranc.es/client.js"
            repo="tianyimasf/pages-comments"
            issue-term="pathname"
            theme="github-light"
            crossorigin="anonymous"
          ></script>
        </section>
        <section id="article-list-button-container">
          <a href="/articles.html">
            <div id="article-list-button">ðŸ“š</div>
          </a>
        </section>
      </article>
    </main>
  </body>
</html>
